<%= render 'shared/errors', obj: @post %>

<div class='well'>
  <%= form_for @post do |f| %>
    <div class='control-group'>
      <%= f.label      :title %>
      <%= f.text_field :title %>
    </div>
    <div class='control-group'>
      <%= f.label      :url %>
      <%= f.text_field :url %>
    </div>
    <div class='control-group'>
      <%= f.label     :description %>
      <%= f.text_area :description, rows: 5 %>
    </div>
    <div class='control-group'>
      <%= f.label :categories %>
      <%= f.collection_check_boxes @post, post: :category_ids, Category.all, :name do %>
        <p>42</p>
      <% end %>
    </div>
    <%= f.submit "#{@post.new_record? ? 'Create' : 'Update'} Post", class: 'btn btn-primary' %>
  <% end %>
</div>
