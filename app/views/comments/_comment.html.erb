<% if comment.created_at %>
  <div class='span0 well text-center'>
    <% if logged_in? %>
      <%= link_to vote_comment_path(comment, vote: true), method: 'post' do %>
        <i class='icon-arrow-up'></i>
      <% end %>
      <br>
    <% end %>
    <%= comment.total_votes %> votes
    <% if logged_in? %>
      <br>
      <%= link_to vote_comment_path(comment, vote: false), method: 'post' do %>
        <i class='icon-arrow-down'></i>
      <% end %>
    <% end %>
  </div>
  <div class='span8 well'>
    <em>"<%= comment.body %>"</em>
    <% if user_page? %>
      on <%= link_to comment.post.title, post_path(comment.post) %>
    <% end %>
    <br>
    <span class='quiet'>by</span>
    <%= link_to comment.creator.username, user_path(comment.creator) %>
    <small>at <%= format_time comment.created_at %></small>
  </div>
<% end %>
